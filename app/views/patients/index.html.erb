<p id="notice"><%= notice %></p>
<%= form_tag(patients_path, :method => "get") do %>
<%= text_field_tag :search, params[:search], :placeholder => "Search for patients by fullname" %> 
<%= submit_tag "Search" %>
<% end %>

<h1 align="center" style="color:blue;">Patient Records</h1>
<h1 align="center" style="color:blue;">
<%= link_to 'Register New Patient', new_patient_path %>
</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th style="color:blue;">Fullname</th>
      <th style="color:blue;">Birthdate</th>
      <th style="color:blue;">Address</th>
      <th style="color:blue;">Telephone</th>
      <th style="color:blue;">Infection</th>
      <th style="color:blue;">Injury</th>
      <th style="color:blue;">Observations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.fullname %></td>
        <td><%= patient.birthdate %></td>
        <td><%= patient.address %></td>
        <td><%= patient.telephone %></td>
        <td><%= patient.infection %></td>
        <td><%= patient.injury %></td>
        <td><%= patient.observations %></td>
        <td><%= button_to 'Show', patient, :method => "get" %></td>
        <td><%= button_to 'Edit', edit_patient_path(patient), :method => "get" %></td>
        <td><%= button_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' }, :method => "get" %></td>
      </tr>
    <% end %>
  </tbody>
</table>



